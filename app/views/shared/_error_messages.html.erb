<% if @user.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-error">
      The form contains <%= pluralize(@user.errors.count, "error") %>.
    </div>
    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li> <%= if msg.include? "digest" then "* Password can't be blank"
                else "* " << msg end %> 
            <% end %>
      </li>
    </ul>
  </div>
<% end %>